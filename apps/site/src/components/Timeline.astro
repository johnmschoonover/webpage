---
const { items } = Astro.props as { items: Array<{ title: string; subtitle?: string; time: string; bullets?: string[] }> };
---
<ul class="relative space-y-6 border-l border-border pl-6">
  {items.map((item) => (
    <li class="relative" key={`${item.title}-${item.time}`}>
      <span class="absolute -left-[0.82rem] mt-1 inline-flex h-4 w-4 items-center justify-center rounded-full border border-primary bg-background"></span>
      <div class="flex flex-col gap-2 rounded-xl bg-background/70 p-4">
        <div class="flex flex-col gap-1">
          <p class="text-xs uppercase tracking-[0.2em] text-muted-foreground">{item.time}</p>
          <h3 class="font-display text-lg font-semibold text-foreground">{item.title}</h3>
          {item.subtitle && <p class="text-sm text-muted-foreground">{item.subtitle}</p>}
        </div>
        {item.bullets && (
          <ul class="space-y-1 text-sm text-muted-foreground">
            {item.bullets.map((bullet) => (
              <li>â€¢ {bullet}</li>
            ))}
          </ul>
        )}
      </div>
    </li>
  ))}
</ul>
